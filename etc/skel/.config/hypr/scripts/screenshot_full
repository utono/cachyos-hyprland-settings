#!/usr/bin/bash
# $HOME/utono/cachyos-hyprland-settings/etc/skel/.config/hypr/scripts/screenshot_full

# Create ~/tmp directory if it doesn't exist
mkdir -p ~/tmp

# Use constant filename that gets overwritten each time
filename="most-recent-screenshot.png"
filepath="$HOME/tmp/$filename"

# Take screenshot and save to file
grimblast save output "$filepath" || exit

# Also copy to clipboard for immediate use
wl-copy < "$filepath"

# Notify
notify-send "Screenshot saved" "Saved as $filename and copied to clipboard"
